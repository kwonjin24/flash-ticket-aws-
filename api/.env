# NestJS API가 실행될 HTTP 포트
PORT=4000

# 애플리케이션 데이터 저장용 PostgreSQL 연결 문자열
DATABASE_URL=postgres://flash_tickets_app:flash_tickets_app@localhost:5432/flash_tickets

# 대기열 및 BullMQ 워커에서 사용하는 Redis 연결 설정
REDIS_HOST=localhost
REDIS_PORT=6379
# Redis 인증이 필요한 경우 입력; 로컬 비보안 인스턴스는 비워두세요
REDIS_PASSWORD=

# RabbitMQ 연결 정보 (모의 결제 및 API 간 결제 이벤트 전달용)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
PAYMENT_REQUEST_QUEUE=payments_request
PAYMENT_RESULT_QUEUE=payments_result

# JWT 액세스 토큰 시크릿 및 만료 시간 (예: 15분)
JWT_ACCESS_SECRET=change-me-access
JWT_ACCESS_EXP=15m

# JWT 리프레시 토큰 시크릿 및 만료 시간 (예: 7일)
JWT_REFRESH_SECRET=change-me-refresh
JWT_REFRESH_EXP=7d

# 동시에 READY 상태로 승격할 수 있는 최대 사용자 수
QUEUE_READY_CAPACITY=50

# 게이트 토큰 유효 시간(밀리초) - READY 티켓이 유효한 시간 제어
QUEUE_GATE_TOKEN_TTL_MS=120000

# BullMQ가 대기열 티켓을 READY로 승격시키는 주기(밀리초)
QUEUE_PROMOTION_INTERVAL_MS=500

# 게이트웨이에서 WebSocket 대기열 상태를 폴링하는 주기(밀리초)
QUEUE_WS_REFRESH_MS=3000

# CORS 및 리다이렉트에 허용되는 프론트엔드 origin
CLIENT_URL=http://localhost:5173

# 관리자 계정 생성 시 필요한 공유 시크릿
ADMIN_REGISTER_SECRET=change-me-admin

# Vite 프론트엔드가 API 요청에 사용하는 기본 URL
VITE_API_BASE_URL=http://localhost:4000
