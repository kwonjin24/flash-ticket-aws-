{
  "dashboard": {
    "title": "System Overview",
    "tags": ["overview", "kubernetes", "system"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Pods",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"default\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 2,
        "title": "Running Pods",
        "type": "stat",
        "gridPos": {
          "x": 4,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"default\", phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "API Server Memory (MB)",
        "type": "stat",
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(api_process_resident_memory_bytes) / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 500
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "Event Loop Lag (ms)",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "max(api_nodejs_eventloop_lag_seconds) * 1000",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short",
            "decimals": 1
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 5,
        "title": "Container Restarts (1h)",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"default\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 3
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 6,
        "title": "HTTP Requests/sec",
        "type": "stat",
        "gridPos": {
          "x": 20,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps",
            "decimals": 2
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 7,
        "title": "Pod Status Distribution",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (phase) (kube_pod_status_phase{namespace=\"default\"})",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      },
      {
        "id": 8,
        "title": "Deployment Replicas",
        "type": "bargauge",
        "gridPos": {
          "x": 8,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "kube_deployment_status_replicas{namespace=\"default\"}",
            "legendFormat": "{{deployment}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 3
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 9,
        "title": "Redis & RabbitMQ Status",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Redis Clients",
            "refId": "A"
          },
          {
            "expr": "rabbitmq_connections",
            "legendFormat": "RabbitMQ Connections",
            "refId": "B"
          },
          {
            "expr": "sum(rabbitmq_queue_messages)",
            "legendFormat": "Queue Messages",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 10,
        "title": "HPA: API Server Auto-Scaling",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"api-server-hpa\"}",
            "legendFormat": "Current",
            "refId": "A"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_min_replicas{horizontalpodautoscaler=\"api-server-hpa\"}",
            "legendFormat": "Min",
            "refId": "B"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_max_replicas{horizontalpodautoscaler=\"api-server-hpa\"}",
            "legendFormat": "Max",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 11,
        "title": "HPA: Pay Service Auto-Scaling",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"pay-service-hpa\"}",
            "legendFormat": "Current",
            "refId": "A"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_min_replicas{horizontalpodautoscaler=\"pay-service-hpa\"}",
            "legendFormat": "Min",
            "refId": "B"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_max_replicas{horizontalpodautoscaler=\"pay-service-hpa\"}",
            "legendFormat": "Max",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 12,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))",
            "legendFormat": "5xx Errors/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 13,
        "title": "Memory Usage by Pod",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (kubernetes_pod_name) (api_process_resident_memory_bytes{kubernetes_namespace=\"default\"}) / 1024 / 1024",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 14,
        "title": "Redis Memory & Commands",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A",
            "yAxis": 1
          },
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec",
            "refId": "B",
            "yAxis": 2
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Memory (MB)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Commands/sec"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "ops"
                }
              ]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 15,
        "title": "RabbitMQ Queue Messages",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (queue) (rabbitmq_queue_messages)",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      }
    ]
  },
  "overwrite": true
}