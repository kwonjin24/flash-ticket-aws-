{
  "dashboard": {
    "title": "System Overview",
    "tags": ["overview", "kubernetes", "system"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 5,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Pod Status Distribution",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (phase) (kube_pod_status_phase{namespace=\"default\"})",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      },
      {
        "id": 2,
        "title": "Event Loop Lag (ms)",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "max(api_nodejs_eventloop_lag_seconds) * 1000",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short",
            "decimals": 1
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "Container Restarts (1h)",
        "type": "stat",
        "gridPos": {
          "x": 10,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"default\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 3
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 6,
        "title": "Redis Status",
        "type": "stat",
        "gridPos": {
          "x": 14,
          "y": 0,
          "w": 5,
          "h": 4
        },
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Clients",
            "refId": "A"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 7,
        "title": "RabbitMQ Status",
        "type": "stat",
        "gridPos": {
          "x": 19,
          "y": 0,
          "w": 5,
          "h": 4
        },
        "targets": [
          {
            "expr": "rabbitmq_connections",
            "legendFormat": "Connections",
            "refId": "A"
          },
          {
            "expr": "sum(rabbitmq_queue_messages)",
            "legendFormat": "Queue Messages",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 8,
        "title": "Deployment Replicas",
        "type": "bargauge",
        "gridPos": {
          "x": 6,
          "y": 4,
          "w": 18,
          "h": 4
        },
        "targets": [
          {
            "expr": "kube_deployment_status_replicas{namespace=\"default\"}",
            "legendFormat": "{{deployment}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 3
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 9,
        "title": "CPU Usage by Pod (%)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"default\"}[5m]) * on(pod) group_left() kube_pod_status_phase{phase=\"Running\"}) * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "percent",
            "min": 0
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["last", "max"]
          }
        }
      },
      {
        "id": 10,
        "title": "Memory Usage by Pod (MB)",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (pod) (container_memory_usage_bytes{namespace=\"default\"} * on(pod) group_left() kube_pod_status_phase{phase=\"Running\"}) / 1024 / 1024",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["last", "max"]
          }
        }
      },
      {
        "id": 11,
        "title": "HPA Auto-Scaling Status",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 6
        },
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=\"default\"}",
            "legendFormat": "{{horizontalpodautoscaler}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["last"]
          }
        }
      },
      {
        "id": 12,
        "title": "HTTP Request Rate & Errors",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 22,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))",
            "legendFormat": "5xx Errors/sec",
            "refId": "B"
          },
          {
            "expr": "(sum(rate(http_requests_total{status=~\"5..\"}[1m])) or vector(0)) / (sum(rate(http_requests_total[1m])) or vector(1)) * 100",
            "legendFormat": "Error Rate (%)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "reqps"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Error Rate (%)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.axisPlacement",
                  "value": "right"
                }
              ]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": ["last", "max"]
          }
        }
      },
      {
        "id": 13,
        "title": "Top 5 Routes by Request Count",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(5, sum by (route) (rate(http_requests_total[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "route": "Route",
                "Value": "Requests/sec"
              }
            }
          }
        ]
      },
      {
        "id": 14,
        "title": "Redis Performance",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 30,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          },
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Memory (MB)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Commands/sec"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "ops"
                }
              ]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 15,
        "title": "RabbitMQ Queue Status",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 38,
          "w": 24,
          "h": 6
        },
        "targets": [
          {
            "expr": "sum by (queue) (rabbitmq_queue_messages)",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      }
    ]
  },
  "overwrite": true
}